@page "/fetchdata"
@inject HttpClient Http
@using BlazorApiClient.Dtos

<h1>SpaceX Launches</h1>

<p>This is Launch data pulled back via REST API.</p>

@if (launches == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Upcoming (y/n)</th>
                <th>Launch Date</th>
                <th>Mission Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var launch in launches)
            {
                <tr>
                    <td>@launch.Id</td>
                    <td>@launch.Upcoming</td>
                    <td>@launch.LaunchDateLocal</td>
                    <td>@launch.MissionName</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private LaunchDto[] launches;

    protected override async Task OnInitializedAsync()
    {
        launches = await Http.GetFromJsonAsync<LaunchDto[]>("sample-data/launches.json");
    }

}
